<div class="container p-4">
    <div class="row">
        {{#each mascotas}}
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3>
                            {{nombre}}
                        </h3>

                        <h6>
                            Raza: {{raza}}, Edad: {{edad}} meses, Sexo: {{sexo}}
                        </h6>

                            <a href="{{url_foto}}" title="clic para ver la foto"><img src="{{url_foto}}" alt="imagen mascota" class="card-img-top mx-auto m-2" style="height: 200px; width:90%; object-fit: cover;"></a>

                        <h6>
                            Descripción: {{descripcion}}
                        </h6>
                        
                        <a href="/usuario/mascotas/borrar/{{id_mascota}}" class="btn btn-danger">Borrar mascota</a>
                        <a href="/usuario/mascotas/editar/{{id_mascota}}" class="btn btn-secondary">Editar mascota</a>
                        <p>Creado: {{ timeago fecha_creacion }}</p>
                    </div>
                </div>
            </div>
        {{ else }}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay mascotas registradas para su usuario.</p>
                    <a href="/usuario/mascotas/anadir">¿Deseas registrar una mascota?</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>