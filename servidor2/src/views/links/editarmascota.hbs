<div class="container p-4">

    <div class="row">

        <div class="col-md-4 mx-auto">

            <div class="card">

                <div class="card-header text-center">
                    <h5>Nuevos datos de la mascota</h5>
                </div>

                <div class="card-body"> 

                    <form action="/usuario/mascotas/editar/{{mascota.id_mascota}}" method="POST" enctype="multipart/form-data">

                        <div class="form-group">
                            <label for="nombre">Nombre mascota:</label>
                            <input type="text" value="{{mascota.nombre}}" class="form-control" name="nombre" placeholder="Nombre mascota." required>
                        </div>

                        <div class="form-group">
                            <label for="edad">Edad mascota (meses):</label>
                            <input type="number" value="{{mascota.edad}}" class="form-control" name="edad" placeholder="Edad mascota (meses)." required>
                        </div>

                        <div class="form-group">
                            <label for="sexo">Sexo mascota:</label>
                            <select name="sexo" id="sexo">
                                <option value="macho">Macho</option>
                                <option value="hembra">Hembra</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="descripcion">Descripción mascota:</label>
                            <textarea type="text" class="form-control" name="descripcion" placeholder="Descripción de mascota." rows="2" required>{{mascota.descripcion}}</textarea>
                        </div>

                        <div class="form-group">
                            <label for="imagen">Foto de la mascota:</label>
                            <input type="file" class="form-control" name="imagen" required>
                        </div>

                        <div class="form-group">
                            <label for="ciudad">Ciudad mascota</label>
                            <input type="text" value="{{mascota.ciudad}}" class="form-control" name="ciudad" placeholder="Ciudad de la mascota." required>
                        </div>

                        <div class="form-group">
                            <label for="raza">Raza mascota:</label>
                            <input type="text" value="{{mascota.raza}}" class="form-control" name="raza" placeholder="raza de la mascota." required>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block pintarBoton">Guardar nuevos datos de mascota</button>
                        </div>

                    </form>

                </div>

            </div>

        </div>

    </div>

</div>